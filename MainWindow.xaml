<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Aliyun OSS Manager" Height="600" Width="1000"
      WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
       <RowDefinition Height="Auto"/>
       <RowDefinition Height="Auto"/>
     <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

  <!-- Configuration Area -->
        <GroupBox Header="OSS Configuration" Grid.Row="0" Margin="10">
   <Grid Margin="10">
      <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
   <Grid.ColumnDefinitions>
     <ColumnDefinition Width="Auto"/>
   <ColumnDefinition Width="*"/>
  <ColumnDefinition Width="Auto"/>
<ColumnDefinition Width="*"/>
    <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>

     <TextBlock Text="AccessKeyId:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox x:Name="txtAccessKeyId" Grid.Row="0" Grid.Column="1" Margin="0,5"/>

      <TextBlock Text="AccessKeySecret:" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="10,0,10,0"/>
       <PasswordBox x:Name="txtAccessKeySecret" Grid.Row="0" Grid.Column="3" Margin="0,5"/>

    <TextBlock Text="Endpoint:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
       <TextBox x:Name="txtEndpoint" Grid.Row="1" Grid.Column="1" Margin="0,5" 
             ToolTip="e.g.: oss-cn-hangzhou.aliyuncs.com"/>

  <TextBlock Text="Bucket Name:" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Margin="10,0,10,0"/>
            <TextBox x:Name="txtBucketName" Grid.Row="1" Grid.Column="3" Margin="0,5"/>

          <Button x:Name="btnConnect" Content="Connect" Grid.Row="0" Grid.Column="4" 
    Width="80" Margin="10,5" Click="BtnConnect_Click"
   Background="#FF2196F3" Foreground="White" FontWeight="Bold"/>

             <CheckBox x:Name="chkRememberConfig" Content="Remember Config" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
  Margin="0,10,0,0" VerticalAlignment="Center" IsChecked="True"
   ToolTip="If checked, configuration will be saved and auto-filled on next startup"/>
        
        <Button x:Name="btnClearConfig" Content="Clear Saved Config" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2"
  Width="120" Height="25" Margin="10,10,0,0" Click="BtnClearConfig_Click"
  ToolTip="Delete locally saved configuration"/>
    </Grid>
     </GroupBox>

        <!-- Operation Area -->
   <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10,0,10,10">
<!-- First Row: Path Navigation -->
        <Grid Margin="0,0,0,5">
     <Grid.ColumnDefinitions>
       <ColumnDefinition Width="Auto"/>
       <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
  
 <TextBlock Text="Current Path:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
  <ComboBox x:Name="cmbCurrentPath" Grid.Column="1" Height="30" 
        IsEditable="True" IsReadOnly="False"
      SelectionChanged="CmbCurrentPath_SelectionChanged"
       ToolTip="Select or enter path, press Enter to navigate">
        <ComboBox.ItemTemplate>
    <DataTemplate>
       <TextBlock Text="{Binding}"/>
       </DataTemplate>
            </ComboBox.ItemTemplate>
 </ComboBox>
          <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10,0,0,0">
      <Button x:Name="btnGoUp" Content="↑ Up" Width="70" Height="30" Margin="0,0,5,0"
        Click="BtnGoUp_Click" IsEnabled="False" ToolTip="Go to parent directory"/>
        <Button x:Name="btnGoRoot" Content="🏠 Root" Width="80" Height="30"
      Click="BtnGoRoot_Click" IsEnabled="False" ToolTip="Go to root directory"/>
            </StackPanel>
        </Grid>
        
     <!-- Second Row: Operation Buttons -->
            <StackPanel Orientation="Horizontal">
 <Button x:Name="btnRefresh" Content="Refresh List" Width="100" Height="35" Margin="0,0,10,0"
     Click="BtnRefresh_Click" IsEnabled="False"/>
        <Button x:Name="btnNewFolder" Content="📁 New Folder" Width="120" Height="35" Margin="0,0,10,0"
       Click="BtnNewFolder_Click" IsEnabled="False" Background="#FF4CAF50" Foreground="White" FontWeight="Bold"/>
<Button x:Name="btnUpload" Content="Upload File" Width="100" Height="35" Margin="0,0,10,0"
      Click="BtnUpload_Click" IsEnabled="False"/>
        <Button x:Name="btnDownload" Content="Download File" Width="100" Height="35" Margin="0,0,10,0"
     Click="BtnDownload_Click" IsEnabled="False"/>
  <Button x:Name="btnDelete" Content="Delete" Width="80" Height="35" Margin="0,0,10,0"
     Click="BtnDelete_Click" IsEnabled="False" Background="#FFF44336" Foreground="White"/>
   <Button x:Name="btnGetUrl" Content="Get URL" Width="100" Height="35" Margin="0,0,10,0"
     Click="BtnGetUrl_Click" IsEnabled="False"/>
     <Button x:Name="btnBatchMove" Content="Batch Move" Width="100" Height="35" Margin="0,0,10,0"
          Click="BtnBatchMove_Click" IsEnabled="False" Background="#FFFF9800" Foreground="White" FontWeight="Bold"/>
     
  
   <TextBlock Text="Sort:" VerticalAlignment="Center" Margin="20,0,10,0"/>
  <ComboBox x:Name="cmbSortOrder" Width="150" Height="30" SelectedIndex="0"
       SelectionChanged="CmbSortOrder_SelectionChanged" IsEnabled="False">
 <ComboBoxItem Content="Last Modified (Desc)"/>
         <ComboBoxItem Content="Last Modified (Asc)"/>
 <ComboBoxItem Content="File Name (A-Z)"/>
     <ComboBoxItem Content="File Name (Z-A)"/>
    <ComboBoxItem Content="File Size (Desc)"/>
  <ComboBoxItem Content="File Size (Asc)"/>
      </ComboBox>
            </StackPanel>
        </StackPanel>

     <!-- File List -->
     <DataGrid x:Name="dgFiles" Grid.Row="2" Margin="10,0,10,10" 
    AutoGenerateColumns="False"
     SelectionMode="Extended" CanUserAddRows="False"
CanUserDeleteRows="False" GridLinesVisibility="Horizontal"
 AlternatingRowBackground="#FFF5F5F5"
      MouseDoubleClick="DgFiles_MouseDoubleClick">
    <DataGrid.Columns>
  <DataGridCheckBoxColumn Header="Select" Width="50" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False"/>
    <DataGridTextColumn Header="Type" Width="60" IsReadOnly="True">
        <DataGridTextColumn.ElementStyle>
      <Style TargetType="TextBlock">
   <Setter Property="FontSize" Value="14"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
   <Setter Property="FontWeight" Value="Bold"/>
         <Setter Property="FontFamily" Value="Segoe UI Emoji, Microsoft YaHei UI"/>
        <Style.Triggers>
   <DataTrigger Binding="{Binding IsFolder}" Value="True">
         <Setter Property="Text" Value="📁"/>
                 <Setter Property="Foreground" Value="#FFA855"/>
 <Setter Property="ToolTip" Value="Folder"/>
      </DataTrigger>
   <DataTrigger Binding="{Binding IsFolder}" Value="False">
  <Setter Property="Text" Value="📄"/>
          <Setter Property="Foreground" Value="#4A90E2"/>
       <Setter Property="ToolTip" Value="File"/>
            </DataTrigger>
         </Style.Triggers>
                </Style>
  </DataGridTextColumn.ElementStyle>
  </DataGridTextColumn>
  <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*" MinWidth="200" IsReadOnly="True">
     <DataGridTextColumn.ElementStyle>
      <Style TargetType="TextBlock">
 <Style.Triggers>
        <DataTrigger Binding="{Binding IsFolder}" Value="True">
                <Setter Property="FontWeight" Value="Bold"/>
         <Setter Property="Foreground" Value="#FFA855"/>
       </DataTrigger>
         </Style.Triggers>
     </Style>
</DataGridTextColumn.ElementStyle>
        </DataGridTextColumn>
     <DataGridTextColumn Header="Full Path" Binding="{Binding FullPath}" Width="2*" MinWidth="250" IsReadOnly="True"/>
 <DataGridTextColumn Header="Size" Binding="{Binding FormattedSize}" Width="100" IsReadOnly="True"/>
     <DataGridTextColumn Header="Last Modified" Binding="{Binding FormattedLastModified}" Width="160" IsReadOnly="True"/>
 <DataGridTextColumn Header="Type" Binding="{Binding FileType}" Width="80" IsReadOnly="True"/>
    </DataGrid.Columns>
 </DataGrid>

     <!-- Status Bar -->
<StatusBar Grid.Row="3" Height="30">
<StatusBarItem>
     <TextBlock x:Name="txtStatus" Text="Ready" FontFamily="Microsoft YaHei UI"/>
   </StatusBarItem>
     <Separator/>
<StatusBarItem>
         <TextBlock x:Name="txtFileCount" Text="Files: 0" FontFamily="Microsoft YaHei UI"/>
 </StatusBarItem>
        <Separator/>
            <StatusBarItem>
        <TextBlock x:Name="txtSelectedCount" Text="Selected: 0" FontFamily="Microsoft YaHei UI"/>
   </StatusBarItem>
 </StatusBar>
    </Grid>
</Window>
